<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/root_layout"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Tambahin Aja"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="36dp"
        android:layout_weight="7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCustomPlay"
        android:layout_gravity="center"
        android:text="Play"
        android:textColor="#ff0000"
        android:textSize="32sp"
        android:background="@drawable/button_bg_round"
        android:layout_margin="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rank"
            android:id="@+id/btnRank"
            android:background="@drawable/button_border"
            android:textColor="@color/colorBrown"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnPlayOnline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:background="@drawable/button_border"
            android:text="Play\nOnline"
            android:textColor="@color/colorBrown" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Play\nFriend"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:background="@drawable/button_border"
            android:textColor="@color/colorBrown"
            android:id="@+id/btnPlayFriend"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Leader\nBoard"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:background="@drawable/button_border"
            android:textColor="@color/colorBrown"
            android:id="@+id/btnLeaderboard"/>

    </LinearLayout>

