<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/fragment_home"
    tools:context=".HomeFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fbutton:cardCornerRadius="30dp">
        <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
            android:text="Rp 1.500"
                android:textColor="@color/colorSecondaryText"
            android:textStyle="bold"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:layout_marginLeft="37dp"
            android:id="@+id/tvPulsa"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/money_bag"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="12dp"/>
        </androidx.cardview.widget.CardView>


    <TextView
            android:layout_width="20dp"
        android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="!"
            android:textColor="#ff0000"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:src="@drawable/puzzle"
            android:id="@+id/ivDailyPuzzle"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"/>
    </FrameLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/shopping_cart"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Tambahin Aja"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:textSize="36dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

<!--        <info.hoang8f.widget.FButton-->
<!--            android:id="@+id/primary_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="left|top"-->
<!--            android:layout_margin="10dp"-->
<!--            android:text="Primary Button"-->
<!--            android:textColor="@android:color/white"/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnRank"
        android:text="Play"
        android:textColor="#ff0000"
            android:layout_marginBottom="20dp"
        android:textSize="32sp"
            android:background="@drawable/button_bg_round"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Custom"
            android:id="@+id/btnCustomPlay"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/btnOnline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Online"
            android:textColor="@color/colorWhite" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Play\nFriend"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnPlayFriend"/>


        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Leader\nBoard"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnLeaderboard"/>

    </LinearLayout>

    </LinearLayout>



