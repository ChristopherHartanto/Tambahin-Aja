<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/fragment_home"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fbutton:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:minWidth="100dp"
            android:id="@+id/cvCredit">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/credit"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textColor="@color/fbutton_color_sun_flower"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/tvCredit"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Season End : -"
            android:id="@+id/tvSeason"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:layout_margin="5dp"
            android:gravity="end"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/puzzle"
            android:id="@+id/ivDailyPuzzle"
            android:elevation="5dp"
            android:padding="15dp"
            android:visibility="gone"
            android:background="@drawable/button_bg_round"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="!"
            android:visibility="gone"
            android:id="@+id/tvPuzzleInfo"
            android:src="@drawable/lightning"
            android:textColor="#ff0000"/>
    </FrameLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:src="@drawable/shopping_cart"
        android:background="@drawable/button_bg_round"
        android:layout_margin="10dp"
        android:id="@+id/ivShop"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:src="@drawable/question"
        android:background="@drawable/button_bg_round"
        android:id="@+id/ivTutorial"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/btnRank"
        android:text="Play"
        android:background="@drawable/button_rank"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="20dp"
        android:textSize="32sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Custom\nGame"
            android:id="@+id/btnCustomPlay"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/btnOnline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:text="Play\nOnline"
            android:textColor="@color/colorWhite" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Play\nFriend"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnPlayFriend"/>


        <info.hoang8f.widget.FButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Leader\nBoard"
            android:layout_weight="1"
            android:alpha="0.9"
            android:layout_margin="5dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/btnLeaderboard"/>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>