<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_tournament"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tournament">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal Match"
            android:textSize="24sp"
            android:id="@+id/tvTournamentTitle"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/info"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/btnInfo"
            android:layout_toEndOf="@id/tvTournamentTitle"/>
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Collect Point in Rank Mode as Much as Possible"-->
<!--            android:gravity="center"-->
<!--            android:textSize="24dp"-->
<!--            android:id="@+id/tvTournamentDesc"/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorYellow"
            android:layout_margin="5dp"
            android:layout_below="@+id/tvTournamentTitle"
            android:id="@+id/btnJoinTournament"
            android:text="Join"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Left : 01:30"
            android:gravity="end"
            android:layout_toEndOf="@id/btnJoinTournament"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:id="@+id/tvTournamentTimeLeft"
            android:textSize="20sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Standings"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/tvStandingTitle"
        android:textStyle="bold"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rvStanding"/>


</LinearLayout>