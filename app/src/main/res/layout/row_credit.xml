<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="20sp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_marginVertical="5dp"
            android:id="@+id/tvCreditTitle"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:text="isi pulsa 10000 ke semua operator"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/operator"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="2"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.95"
            android:visibility="gone"
            android:id="@+id/layout_credit_sold_out">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100"
                android:textSize="18dp"
                android:id="@+id/tvCreditSoldOutDesc"
                android:gravity="right |center"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/credit"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvCreditDesc"
                android:gravity="left |center"
                android:textSize="21dp"
                android:textColor="@color/fbutton_color_sun_flower"
                android:layout_marginLeft="5dp"
                android:text="7000"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center | end">
                <info.hoang8f.widget.FButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/btnBuyCredit"
                    android:layout_marginHorizontal="10dp"
                    android:text="Buy"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>